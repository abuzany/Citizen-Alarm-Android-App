<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Robo"
        android:id="@+id/btnRobery"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignBottom="@+id/btnAccident"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secuestro"
        android:id="@+id/btnKidnap"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnAccident"
        android:layout_toEndOf="@+id/btnAccident" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accidente"
        android:id="@+id/btnAccident"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnRobery"
        android:layout_toEndOf="@+id/btnRobery" />

    <EditText
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="10"
        android:minLines="5"
        android:gravity="top|left"
        android:maxLines="15"
        android:layout_below="@+id/btnRobery"
        android:layout_alignLeft="@+id/btnRobery"
        android:layout_alignStart="@+id/btnRobery"
        android:layout_alignRight="@+id/btnKidnap"
        android:layout_alignEnd="@+id/btnKidnap" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportar"
        android:id="@+id/btnReport"
        android:layout_below="@+id/tvDescription"
        android:layout_toRightOf="@+id/btnRobery"
        android:layout_toEndOf="@+id/btnRobery" />
</RelativeLayout>